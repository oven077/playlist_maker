<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/player_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="← Назад"
        android:textSize="18sp"
        android:padding="16dp"
        android:background="#f0f0f0"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/track_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/placeholder_512"
        app:layout_constraintTop_toBottomOf="@id/player_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/trackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название трека"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/track_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Исполнитель"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопки управления -->
    <LinearLayout
        android:id="@+id/controls_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Кнопка добавить в плейлист -->
        <ImageView
            android:id="@+id/button_add_to_playlist"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/playlist"
            android:background="@drawable/ellipse"
            android:padding="12dp"
            android:clickable="true" />

        <!-- Кнопка воспроизведения -->
        <ImageView
            android:id="@+id/play_track"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/play"
            android:background="@drawable/ellipse"
            android:padding="20dp"
            android:clickable="true" />

        <!-- Кнопка добавить в избранное -->
        <ImageView
            android:id="@+id/button_add_to_favorites"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/favorites"
            android:background="@drawable/ellipse"
            android:padding="12dp"
            android:clickable="true" />

    </LinearLayout>

    <!-- Время воспроизведения -->
    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0:30"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/controls_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Детальная информация -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Длительность -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Длительность"
                android:textSize="14sp"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:35"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Альбом -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Альбом"
                android:textSize="14sp"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yesterday (Remastered 2009)"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Год -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Год"
                android:textSize="14sp"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/release_date_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1965"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Жанр -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Жанр"
                android:textSize="14sp"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/primary_genre_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rock"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Страна -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Страна"
                android:textSize="14sp"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/country_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Великобритания"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>